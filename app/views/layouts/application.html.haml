!!!
%html{lang: 'en'}
  %head
    %title= title
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html'}
    %link{rel: 'apple-touch-icon', sizes: '72x72', href: 'apple-touch-ipad.png'}
    %link{rel: 'apple-touch-icon', sizes: '114Ã—114', href: 'apple-touch-iphone4.png'}

    = csrf_meta_tag
    = javascript_include_tag 'application', media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag 'application', "data-turbolinks-track" => true
    = yield(:head)
  %body
    .container
      .row
        .navbar.navbar-top
          .navbar-inner
            .container
              %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.brand(href="#") Da Yuan Circle
              .container.nav-collapse
                %ul.nav
                  - if member_signed_in?
                    %li= link_to 'natal charts', people_path
                    %li= link_to 'stems + branches', pillars_path
                    %li= link_to 'stars', stars_path
                    %li
                      = link_to new_person_path do
                        %i.icon-plus-sign
                    %li.dropdown
                      %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
                        %i.icon-cog
                      %ul.dropdown-menu{role: 'menu', aria_labelledby: 'dropdownMenu'}
                        %li= link_to 'feedback', new_feedback_path
                        %li= link_to 'updates', blog_path
                        %li= link_to 'sign out', destroy_member_session_path, :method => :delete
                        %li= link_to 'change password', change_password_path
                        = yield(:navigation)
                = form_tag people_path, method: :get, class: 'navbar-search' do |f|
                  = text_field_tag :search, '', id: 'people_search', class: 'search-query', placeholder: 'Look Up Saved Chart', data: {provide: 'typeahead'}


      #content_wrapper
        #content
          - if flash[:notice]
            %p.notice= flash[:notice]
          - if flash[:error]
            %p.error= flash[:error]
          = yield
      
                  
